<?php
/**
 *  @file 
 *  jobs schema content type  and creates jobs content types
 *
 */ 

/**
 * 
 * 
 */
function jobs_enable() {
  drupal_install_schema('jobs'); 
  drupal_set_message($message = t('The jobs  module was successfully enabled.'), $type = 'status');

  
  node_types_rebuild();
/**   module_load_include('inc', 'node', 'content_types');
  db_update('system')
    ->condition('name', 'jobs')
    ->condition('type', 'module')
    ->fields(array('weight' => -1))
    ->execute();

// Optionally create the default webform type.
  if (variable_get('jobs_install_create_content_type', TRUE)) {
    $jobs_type = array(
      'type' => 'jobs',
      'name' => st('Jobs'),
      'base' => 'node_content',
      'custom' => TRUE,
      'modified' => TRUE,
      'locked' => FALSE,
    );
  }
  node_type_save($jobs_type);
*/
  $types = node_type_get_types();
  /**
  $instance = field_info_instance('node', 'body', 'jobs'); 
  field_delete_instance($instance);
  */
  foreach (_jobs_installed_fields() as $field) {
    field_create_field($field);
  }
 
  foreach (_jobs_installed_instances() as $instance) {
    field_create_instance($instance);
  }
//  drupal_install_schema('jobs'); 
}

/**
 *
 * 
 */
function jobs_disable() {
  drupal_uninstall_schema('jobs');  
  drupal_set_message($message = t('The jobs  module was successfully disabled.'), $type = 'status'); 
  $sql = 'SELECT nid FROM {node} n WHERE n.type = :type';
  $result = db_query($sql, array(':type' => 'jobs'));
  $nids = array();
  foreach ($result as $row) {
    $nids[] = $row->nid;
  }
  node_delete_multiple($nids);
  $instance = array('field_name' => 'comment_body', 'bundle' => 'comment_node_jobs', 'entity_type' => 'comment');
  field_delete_instance($instance);
 
  $instance = array('field_name' => 'body', 'bundle' => 'jobs', 'entity_type' => 'node');
  field_delete_instance($instance);
 
   $fields = array_keys(_jobs_installed_fields());
   foreach ($fields as $field) {
      field_delete_field($field);
  }
  node_type_delete('jobs');
  field_purge_batch(1000);
}



/**
 *
 * 
 */
function _jobs_installed_fields() {
 $t = get_t();
  return array(
    'job_id' => array(
      'field_name' => 'job_id',
      'cardinality' => 1,
      'type'        => 'text',
    ),
    'description' => array(
      'field_name' => 'job_description',
      'cardinality' => 1,
      'type'        => 'text_long',
    ),
    'no_of_openings' => array(
      'field_name' => 'no_of_openings',
      'cardinality' => 1,
      'type'        => 'number_integer',    
    ),

    'last_date' => array(
      'field_name' => 'last_date',
      'cardinality' => 1,
      'type'        => 'date',
    ),

    'category' => array(
      'field_name' => 'category',
      'cardinality' => 1,
      'type'        => 'list_text',
      'settings' => array(
        'allowed_values' => array(
        'bank_jobs' => 'Bank jobs',
        'engineering_jobs' => 'Engineering jobs',
        'export_import' => 'Export import',
        ),
        'allowed_values_function' => '',
      ),
      'default_widget' => 'options_select',
      'default_formatter' => 'list_default', 
    ),
   );
}
 
 
/**
 *
 * 
 */
function _jobs_installed_instances() {
  $t = get_t();
  return array(
    'job_id' => array(
      'field_name' => 'job_id',
      'label'       => $t('Job id'),
      'bundle' => 'jobs',
      'entity_type' => 'node',
      'widget'      => array(
        'type'    => 'textfield',
      ),
      'display' => array(
