/**
 *
 * 
 */

function jobs_schema() {

  $schema['jobs'] = array(
    'description' => 'jobs applicant table', 
    'fields'    => array(
    'aplicant_id' => array('type' => 'serial', 'unsigned' => TRUE, 'not null' => TRUE), 
    'job_id'       => array('type' => 'int', 'unsigned' => TRUE, 'not null' => TRUE),
    'first_name'       => array('type' => 'varchar', 'length' => 40, 'not null' => TRUE, 'default' => 0),
    'last_name'      => array('type' => 'varchar', 'length' => 40, 'not null' => TRUE, 'default' => ''),
    'date_of_birth'  => array(  'type' => 'varchar', 'mysql_type' => 'datetime', 'not null' => FALSE),
    'mobile'     => array('type' => 'varchar', 'length' => 10, 'not null' => TRUE, 'default' => ''),
    'name_of_the_institution'       => array('type' => 'varchar', 'length' => 255, 'not null' => FALSE, 'default' => ''),
    'qualification'    => array('type' => 'varchar', 'length' => 100, 'not null' => FALSE, 'default' => ''),
    'fixed_compensation'   => array('type' => 'int', 'not null' => TRUE, 'default' => 0),
    'variable_compensation'   => array('type' => 'int', 'not null' => TRUE, 'default' => 0),
    'current_location'   => array('type' => 'varchar', 'length' => 255, 'not null' => FALSE, 'default' => ''),
    'permanent_location'   => array('type' => 'varchar', 'length' => 255, 'not null' => FALSE, 'default' => ''),
    'company'  => array('type' => 'varchar', 'length' => 255, 'not null' => FALSE, 'default' => ''),
    'years_of_experience'    => array('type' => 'int', 'not null' => TRUE, 'default' => 0),
    'notice_period' => array('type' => 'int', 'not null' => TRUE, 'default' => 0),
    'current_role'      => array('type' => 'varchar', 'length' => 255, 'not null' => FALSE, 'default' => ''),
    'candidate_ex_employee_check' => array('type' => 'int', 'not null' => TRUE, 'default' => 0),
    'resume' =>  array('type' => 'int', 'not null' => TRUE, 'default' => 0),
    'cover_letter' =>  array('type' => 'text', 'not null' => TRUE),
    'email' =>  array('type' => 'varchar', 'length' => 255, 'not null' => FALSE, 'default' => ''),
  ),
/**  
 'indexes' => array( 
     
  ),
*/
/**  'unique keys' => array(
    'vid' => array('vid'),
  ),
*/
 'foreign keys' => array(
    'jobid' => array(
      'table' => 'node',
      'columns' => array('job_id' => 'nid'),
     ),
    'fid' => array(
      'table' => 'file_managed',
      'columns' => array('resume' => 'fid'),
    ),
   ),
  'primary key' => array('aplicant_id'),  
  );
 return $schema;
}
