 * passing the responsibility of clean-up to Drupalâ€™s core.
 *
 */ 
/**
$form[''] = array(
  '#type' = '',    
);
$form[''] = array(
  '#type' = '',
);
$form[''] = array(
  '#type' = '',
);
$form[''] = array(
  '#type' = '',
);  
return $form;
*/
}

function user_loggedin_name() {
  global $user;
  $user_name = $user->name;
  drupal_json_output($user_name);  
}
